= render partial: 'shared/tabs', locals: { user: @user }

header.page-header
  .container
    h1.page-header__title
      | みんなの新着日記

.page-body
  .container
    - @diaries.map do |diary|
      - game = Game.find(diary.game_id)
      .index-container.diary-index-title
        = link_to "#{game.date.year}/#{game.date.month}/#{game.date.day} #{Team.find(game.team_home_id).name}VS#{Team.find(game.team_visitor_id).name}", "/#{User.find(diary.user_id).username}/diaries/#{diary.id}"
        br
        span
          = link_to "@#{Ballpark.find(game.ballpark_id).name} #{User.find(diary.user_id).username}", "/#{User.find(diary.user_id).username}/diaries/#{diary.id}"
        / a href="/#{User.find(diary.user_id).username}/diaries/#{diary.id}" #{game.date.year}/#{game.date.month}/#{game.date.day} #{Team.find(game.team_home_id).name}VS#{Team.find(game.team_visitor_id).name}
        / span
        / a href="/#{User.find(diary.user_id).username}/diaries/#{diary.id}" @#{Ballpark.find(game.ballpark_id).name} #{User.find(diary.user_id).username}
    br
  .container
    - if current_user
      = link_to '+', new_diary_path(current_user&.username), class: 'button is-primary plus'
