doctype html
html prefix="og: https://ogp.me/ns#"
  head
    meta charset="utf-8"
    meta name="description" content="自分だけの野球観戦日記を作ろう"
    meta property="og:title" content="My Ground"
    meta property="og:description" content="自分だけの野球観戦日記を作ろう"
    meta property="og:type" content="website"
    meta property="og:url" content="https://my-ground.herokuapp.com/"
    meta property="og:site_name" content="My Ground"
    meta property="og:image" content="#{image_url('ogp.png')}"
    title
      | MyGround
    meta[name="viewport" content="width=device-width,initial-scale=1"]
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_pack_tag 'application', media: 'all'
    script crossorigin="anonymous" src="https://kit.fontawesome.com/7a3d65f006.js"
    = javascript_pack_tag 'application'
    = favicon_link_tag 'favicon.png'

  body
    .wrapper
      .wrapper__start
        - if header?
          = render 'shared/header'
        - if notice
          = render 'shared/flash'
        = yield
      .wrapper__end
        = render 'shared/footer'
